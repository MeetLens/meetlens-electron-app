{
  "name": "meetlens",
  "version": "1.0.0",
  "description": "Desktop meeting transcription application with real-time translation",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:electron && concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder --mac --config electron-builder.json",
    "package:win": "npm run build && electron-builder --win --config electron-builder.json",
    "package:linux": "npm run build && electron-builder --linux --config electron-builder.json",
    "package:all": "npm run build && electron-builder --mac --win --linux --config electron-builder.json",
    "package:dir": "npm run build && electron-builder --mac --dir --config electron-builder.json",
    "release": "npm run package:all && gh release create v$npm_package_version release/MeetLens-* --title \"MeetLens v$npm_package_version\" --notes-file RELEASE_NOTES.md",
    "release:mac": "npm run package && gh release create v$npm_package_version release/MeetLens-*.dmg --title \"MeetLens v$npm_package_version (macOS)\" --notes-file RELEASE_NOTES.md",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:memory": "vitest src/services/audioService.memory.test.ts"
  },
  "keywords": [
    "electron",
    "transcription",
    "meetings",
    "speech-to-text"
  ],
  "author": {
    "name": "MeetLens",
    "email": "askinkadir@cekim.eu"
  },
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.1",
    "vitest": "^2.0.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.3",
    "ws": "^8.16.0"
  }
}